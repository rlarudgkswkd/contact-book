<!-- views/contacts/show.js -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head') %> <!-- 1 -->
    </head>
    <body>
        <%- include('../partials/nav') %> <!-- 2 -->
        <div class="contact contact-show">
            <h2>Show</h2>
            <div>
                <h3><%= contact.name %></h3>
                <label>Email</label><span><%= contact.email %></span>
                <br>
                <label>Phone</label><span><%= contact.phone %></span>
            </div>
            <div class="contact-menu">
                <!--a태그는 get만 요청할수있음. 그래서 form 사용한것-->
                <a href="/contacts/<%= contact._id%>/edit">Edit</a>
                <form action="/contacts/<%= contact._id%>?_method=delete" method="post">
                    <a href="javascript:;" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
                </form>
            </div>
        </div>
    </body>
</html>