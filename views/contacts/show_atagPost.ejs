<!-- views/contacts/show_atagPost.js -->

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %> <!-- 1 -->
    <script>
        function goPage(_id){
            var f = document.paging;

            f._id.value = _id;

            f.action = "/contacts/"+_id;
            f.method = "post";
            f.submit();

        };
    </script>
</head>
<body>
    <%- include('../partials/nav') %> <!-- 2 -->
    <div class="contact contact-show">
        <h2>Show</h2>
        <div>
            <h3><%= contact.name %></h3>
            <label>Email</label><span><%= contact.email %></span>
            <br>
            <label>Phone</label><span><%= contact.phone %></span>
        </div>
        <div class="contact-menu">
            <!--a태그는 get만 요청할수있음. 그래서 form 사용한것-->
            <a href="/contacts/<%= contact._id%>/edit">Edit</a>
            <br>
            <a href="javascript:goPage(<%= contact._id%>)" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
        </div>
    </div>
    <form name="paging">
        <input type="hidden" name="_id"/>
    </form>
</body>
</html>